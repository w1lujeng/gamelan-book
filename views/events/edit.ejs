<% include ../partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>GamelanBook</h1>
      <p>One stop shopping for all Gamelan Events in Southern California</p>
      <a class="btn btn-primary btn-large" href="/groups">View all groups</a>
    </div>
  </header>

  <div class="row">
      <h1 style="text-align: center">Edit Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
         
      <form action="/groups/<%= group_id %>/events/<%= event._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="event[date]" value="<%= event.date %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="event[location]" value="<%= event.location %>">
        </div>
        
        <div class="form-group">
          <button class="btn btn-lg btn-success btn-block">Submit</button>
        </div>
      </form>
    </div>
  </div>
 

</div> 
<% include ../partials/footer %> 