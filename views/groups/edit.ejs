<% include ../partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>GamelanBook</h1>
      <p>One stop shopping for all Gamelan Events in Southern California</p>
      <a class="btn btn-primary btn-large" href="/groups">View all groups</a>
    </div>
  </header>
  <div class="row">
      <h1 style="text-align: center">Edit <%= group.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
         
      <form action="/groups/<%= group._id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="group[image]" value="<%= group.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="group[name]" value="<%= group.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="group[genre]" value="<%= group.genre %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-success btn-block">Submit</button>
        </div>
      </form>
    </div>
  </div>
 

</div> 
<% include ../partials/footer %> 